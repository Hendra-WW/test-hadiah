<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="HadiahButton" owl="1">
        <div class="control-button">
            <i class="fa fa-gift" role="img" aria-label="Hadiah" title="Hadiah"/>
            Hadiah
        </div>
    </t>

    <t t-inherit="point_of_sale.ProductScreen" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[contains(@class,'control-buttons')][1]" position="before">
            <div class="control-buttons">
                <HadiahButton/>
            </div>
        </xpath>
    </t>

</templates>
