<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_hadiah_tree" model="ir.ui.view">
        <field name="name">product.hadiah.tree</field>
        <field name="model">product.hadiah</field>
        <field name="arch" type="xml">
            <tree string="List Hadiah" create="false">
                <field name="product_id"/>
            </tree>
        </field>
    </record>

    <record id="product_hadiah_action" model="ir.actions.act_window">
        <field name="name">Product Hadiah</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.hadiah</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_product_hadiah_action_pos" name="Product Hadiah" action="product_hadiah_action" parent="point_of_sale.pos_config_menu_catalog" sequence="15"/>
    <menuitem id="menu_product_hadiah_action_stock" name="Product Hadiah" action="product_hadiah_action" parent="stock.menu_stock_inventory_control" sequence="15"/>

    <record id="product_template_hadiah_inherit" model="ir.ui.view">
        <field name="name">product.template.hadiah.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="inside">
                <field name="is_hadiah"/>
                <label for="is_hadiah"/>
            </xpath>
        </field>
    </record>

    <record id="product_product_hadiah_inherit" model="ir.ui.view">
        <field name="name">product.product.hadiah.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_hadiah']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//label[@for='is_hadiah']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>
    
</odoo>